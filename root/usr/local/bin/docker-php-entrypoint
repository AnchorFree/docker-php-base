#!/bin/sh
set -e

envsubst < /usr/local/etc/php-fpm.conf.template > /usr/local/etc/php-fpm.conf
envsubst < /usr/local/etc/php-fpm.d/satellite.conf.template > /usr/local/etc/php-fpm.d/satellite.conf
envsubst < /usr/local/etc/php-fpm.d/backend.conf.template > /usr/local/etc/php-fpm.d/backend.conf
envsubst < /usr/local/etc/php/php.ini.template > /usr/local/etc/php/php.ini

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- php-fpm "$@"
fi


exec "$@"
